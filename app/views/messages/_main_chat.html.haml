.chat-main
  .main-header
    %h2.main-header__name-box 
      %ul.main-header__group-name
        = @group.name 
      %li.main-header__member-name
        Member :
        - @group.users.each do |user|
          = user.name
          
    .main-header__edit-btn
      = link_to edit_group_path(current_user) do
        Edit
  .main-messages
    .main-messages__messages_id1
      .main-messages__messages_id1__user-info
        %p1.upper-info__talker
          masa
        %p2.user-info__date
          2019/11/20(Wed) 17:43:01
      %p3.messages_comments
        おはよう！
    .main-messages__messages_id2
      .main-messages__messages_id2__user-info
        %p1.upper-info__talker
          masa
        %p2.user-info__date
          2019/11/20(Wed) 17:43:43
      %p3.messages_comments
        今日は夜から雨
    .user-info
      %p.messages_comments 

  .messages
    = render @messages

  .form
    = form_for [@group, @message] do |f|
      = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
      .form__input-box
        = f.label :image, class: 'form__input-box__image' do
          = icon('fas', 'image', class: 'icon')        
          = f.file_field :image, class: 'form__input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'  